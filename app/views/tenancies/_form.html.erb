<div class="col-12">
  <%= form_for(tenancy) do |f| %>
    <% if tenancy.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(tenancy.errors.count, "error") %> prohibited this tenancy from being saved:</h2>

        <ul>
        <% tenancy.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group col-6">
      <%= f.label :checkin %>
      <%= f.datetime_select :checkin %>
    </div>

    <div class="form-group col-6">
      <%= f.label :checkout %>
      <%= f.datetime_select :checkout %>
    </div>

    <div class="form-group col-6">
      <%= f.label :tenant_cpf %>
      <%= f.text_field :tenant_cpf, :maxlength => 11 %>
    </div>

    <div class="form-group col-6">
      <%= f.label :car %>
      <%= f.select :car_id, Car.all.collect { |car| [ car.model, car.id ] } %>
    </div>

    <div class="actions col-6">
      <%= f.submit "Confirm", :class => "btn btn-primary" %>
      <%= link_to 'Back', tenancies_path, class: "btn btn-secondary" %>
      
      <% if action_name == 'edit' %>
        <%= link_to 'Show', @tenancy, class: "btn btn-info" %>
      <% end %>
    </div>
  <% end %>
</div>
