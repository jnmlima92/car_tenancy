<div class="col-12">
  <p id="notice"><%= notice %></p>

  <div class="col-12">
    <h3 class="text-center">
      <%= @car.model %>
    </h3>
  </div>
</div>

<div class="col-12">
  <div class="text-center">
    <div class="col-12">
      <p>
        <strong>Manufacturer:</strong>
        <%= @car.manufacturer %>
      </p>
    </div>

    <div class="col-12">
      <p>
        <strong>Plate:</strong>
        <%= @car.plate %>
      </p>
    </div>

    <div class="col-12">
      <p>
        <strong>Model year:</strong>
        <%= @car.model_year %>
      </p>
    </div>

    <div class="col-12">
      <p>
        <strong>Manufacturer year:</strong>
        <%= @car.manufacturer_year %>
      </p>
    </div>
  </div>

  <div class="col-12 text-center">
    <%= link_to 'Edit', edit_car_path(@car), class: 'btn btn-primary' %>
    <%= link_to 'Back', cars_path, class: 'btn btn-secondary' %>
  </div>
</div>
